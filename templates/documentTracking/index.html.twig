{% set activeMenu = 'center' %}
{% set subMenu = 'center' %}
{% set activeMenu2 = 'documentTracking' %}

{% extends 'layout/app.html.twig' %}

{% block body %}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('projects.index') }}" title="{{ 'app.home'|trans }}">{{ 'app.home'|trans }}</a></li>
            <li class="breadcrumb-item"><a href="{{ path('project.home.index', { 'id' : project.id }) }}" title="{{ project.acronyme }}">{{ project.acronyme }}</a></li>
            <li class="breadcrumb-item active"><a href="{{ path('project.list.documentTracking', { 'id' : project.id }) }}" title="formations">{{ 'entity.DocumentTracking.action.list'|trans }}</a></li>
        </ol>
    </nav>

    <h1>{{ 'entity.DocumentTracking.action.list'|trans }} <br>
        {% if is_granted('PROJECT_ACCESS_AND_OPEN', project) and is_granted('DOCUMENTTRACKING_CREATE') %}
            <a class="btn btn-primary" href="{{ path('project.documentTracking.new', {'id' : project.id}) }}">{{ 'entity.DocumentTracking.action.new'|trans }}</a>
        {% endif %}
    </h1>

    {{ list.render|raw }}

{% endblock %}
