{# Allow view Studies #}
{% set allowViewStudies = is_granted('ROLE_STUDY_READ') %}

{# Allow view Sites #}
{% set allowViewSites = is_granted('ROLE_SITE_READ') %}

{# Allow view Countries #}
{% set allowViewCountries = is_granted('ROLE_COUNTRY_READ') %}

