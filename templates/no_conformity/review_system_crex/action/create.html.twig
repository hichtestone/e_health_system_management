{% set activeMenu = 'no_conformity' %}

{% extends 'layout/app.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('no_conformity.protocol_deviation_crex') }}" title="{{ 'menu.NonConformity.label' | trans }}">{{ 'menu.NonConformity.label' | trans }}</a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('no_conformity.system_crex')}}">{{ 'entity.NoConformity.menu.system_crex'|trans }}</a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('no_conformity.system_crex.show', { 'reviewSystemCrexID' : review.id })}}">Fiche revue - {{ 'entity.NoConformity.menu.system_crex'|trans }}</a>
            </li>
            <li class="breadcrumb-item active">
                {% if action == 'edit' %} {{ 'entity.Deviation.DeviationReviewAction.action.modify'|trans }} {% else %} {{ 'entity.Deviation.DeviationReviewAction.action.new'|trans }} {% endif %}
            </li>
        </ol>
    </nav>

    <h1>{% if action == 'edit' %} {{ 'entity.Deviation.DeviationReviewAction.action.modify'|trans }} {% else %} {{ 'entity.Deviation.DeviationReviewAction.action.new'|trans }} {% endif %}</h1>

    <div class="admin-block">
        {{ form_start(form) }}
        <div class="row mb-3">
            <div class="col-4">
                {{ form_label(form.typeAction, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
            </div>
            <div class="col-4">
                {{ form_widget(form.typeAction) }}
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-4">
                {{ form_label(form.description, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
            </div>
            <div class="col-4">
                {{ form_widget(form.description) }}
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-4">
                {{ form_label(form.applicationAt, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
            </div>
            <div class="col-4">
                {{ form_widget(form.applicationAt) }}
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-4">
                {{ form_label(form.doneAt, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
            </div>
            <div class="col-4">
                {{ form_widget(form.doneAt) }}
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-4">
                {{ form_label(form.status, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
            </div>
            <div class="col-4">
                {{ form_widget(form.status) }}
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-4">
                {{ form_label(form.intervener, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
            </div>
            <div class="col-4">
                {{ form_widget(form.intervener) }}
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <button class="btn btn-primary" type="submit">{{ ('entity.Deviation.DeviationReviewAction.action.'~action)|trans }}</button>
                <a class="btn btn-secondary" href="{{ path('no_conformity.system_crex.show', { 'reviewSystemCrexID': review.id }) }}">{{ ('form.action.cancel')|trans }}</a>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('deviation-system') }}
{% endblock %}
