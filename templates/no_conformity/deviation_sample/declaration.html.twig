            <div class="col-lg-12"><h5 class="text-center">{{ 'entity.NoConformity.field.sample.declaration.section.description'|trans }}</h5></div>
        </div>

        <div class="row">
            {% if deviationSample.projects is not null and editMode != 'edit' %}
