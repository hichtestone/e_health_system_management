{% block content %}
    <h1>{{ ('entity.Service.action.'~action)|trans }}</h1>

    <div class="admin-block">
        {{ form_start(form, {'action': url}) }}

        {{ form_row(form.name) }}
        {{ form_row(form.addressInherited) }}

        <div id="service-address">
            <div class="required">
                {{ form_row(form.address) }}
            </div>
            {{ form_row(form.address2) }}
            <div class="required">
                {{ form_row(form.city) }}
            </div>
            {{ form_row(form.postalCode) }}
        </div>

        <button type="submit" class="btn btn-primary" type="submit">{{ ('entity.Service.action.'~action)|trans }}</button>

        {{ form_end(form) }}
    </div>

{% endblock %}
