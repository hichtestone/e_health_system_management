{% set activeMenu = 'report_model' %}

{% extends 'layout/app.html.twig' %}

{% block content %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('projects.index') }}" title="{{ 'menu.admin.home'|trans }}">{{ 'menu.admin.home'|trans }}</a></li>
            <li class="breadcrumb-item">
                <a href="{{ path('admin.report.model.index') }}" title="{{ 'entity.report_model.title' | trans }}">
                    {{ 'entity.report_model.title' | trans }}
                </a>
            </li>
            <li class="breadcrumb-item active">{{ ('form.action.'~action)|trans }}</li>
        </ol>
    </nav>

    <h1>{{ ('entity.report_model.action.'~action)|trans }}</h1>

    <div class="admin-block">

        {{ form_start(form) }}
        <div class="row">
            <div class="col-6">
                {{ form_row(form.reportType) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ form_row(form.visitType) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ form_row(form.name) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary">
                    {{ ('entity.report_model.action.'~action)|trans }}
                </button>
                <br>
                <br>
                <span style="color: #c30000;">* {{ ('general.star.mandatory')|trans }}</span>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
